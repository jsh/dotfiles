# adjust my search path
fgrep -q :: <<< $PATH || grep -q :$ <<< $PATH || PATH+=:

# use my preferred editor
export EDITOR=/usr/bin/vim
[[ -f $EDITOR ]] || EDITOR=/usr/bin/vi
set -o vi

# add my own locate database
[[ -f ~/var/mlocate.db ]] && export LOCATE_PATH=~/var/mlocate.db

# don't ^D to logout
set -o ignoreeof

# customize behavior of cd
fgrep -q ':~' <<< $CDPATH || CDPATH+=':~'
fgrep -q ':~/Projects' <<< $CDPATH || CDPATH+=':~/Projects'
set -P

shopt -s cdspell dirspell globstar

# keep lots of history
export HISTFILESIZE=100000000
export HISTSIZE=100000
export HISTCONTROL=ignoreboth
shopt -s histappend
